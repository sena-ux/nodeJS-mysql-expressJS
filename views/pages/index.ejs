<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>

    <style>
        tr, td{
            margin: 20px;
            padding: 10px;
            width: 500px;
        }
        a{
            color: black;
            text-decoration: none;
            flex-direction: none;
        }
        a:hover{
            text-decoration: none;
            font-size: 15px;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
            color: black;
        }
    </style>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h2>BIMBINGAN KONSELING</h2>
        <p><%= tag %></p>

        <table border="5px">
                <tr>
                    <td><center>Nama</center></td>
                    <td><center>Alasan</center></td>
                    <td><center>Tanggal dan waktu</center></td>
                </tr>
            <% nama.forEach((nama)=>{ %>
                <tr>
                    <td><%= nama.name %></td>
                    <td><%= nama.alasan %></td>
                    <td><%= nama.Tanggal_dan_waktu %></td>
                </tr>
            <% }); %>
        </table>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>